<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="en">
<head>
	<title>PAYOO Santander UK</title>
<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
</head>
<body style="margin: 0 auto; padding: 0; height: 100%; background:#f8f8f8" >
<table border="0" cellspacing="0" cellpadding="0" width="640" align="center" height="100%" bgcolor="#ffffff">

	<tr height="19" style="background-color:#f8f8f8;"><td colspan="3"></td></tr>
	<tr height="40" style="background-color:#CC0000;">
		<td colspan="2"><img src="{{ server }}/holiday/assets/images/requestIcon.gif" alt="icon"></td>
		<td width="209"
		style="text-align:right; color:#ffffff; font-size:11px; font-family:sans-serif; padding:0 5px 0 0">
			{{ now }}
		</td>
	</tr>
	<tr height="107"><td colspan="3"></td></tr>
	<!-- User request -->
	<tr>
		<td width="209"></td>
		<td>
			<table border="0" cellspacing="0" cellpadding="0" align="center" id="Name" width="226" >
				<tr height="35">
					<td colspan="3"
					style="color:#999999; text-align:center; font-size:24px; font-family:sans-serif; line-height:26px;">
						Hi {{ to.name }}!
					</td>
				</tr>
				<tr height="7"><td></td></tr>
				<tr height="30">
					<td style=" text-align:center; font:normal 14px sans-serif; color:#cdcdcd;">
						{{ config.text }}
					</td>
				</tr>
				<tr height="7"><td></td></tr>
			</table>
		</td>
		<td width="209"></td>
	</tr>
	<tr>
		<td width="209"></td>
		<td>
			<table border="0" cellspacing="0" cellpadding="0"  align="center" id="Users" width="226" >
				<tr height="29"><td></td></tr>
				<tr height="120">
					<td colspan="3" style="text-align:center;">
						<img style="width:120px; height:120px; border-radius:50%;margin:0 auto;display:block;"
						src="" alt="Employee picture">
					</td>
				</tr>
				<tr height="25"><td></td></tr>
				<tr height="20">
					<td style="text-align:center; font:normal 16px sans-serif; color:#999999;">
						{{ from.name }}
					</td>
				</tr>
				<tr height="20">
					<td style="text-align:center; font:normal 12px sans-serif; color:#cdcdcd;">
						{{ from.title }}
					</td>
				</tr>
				<tr height="20">
					<td style="text-align:center; font:normal 12px sans-serif; color:#999999;">
						{{ from.company }}
					</td>
				</tr>
			</table>
		</td>
		<td width="209"></td>
	</tr>
	<tr>
		<td width="209"></td>
		<td>
			<table border="0" cellspacing="0" cellpadding="0" align="center" id="buttonrequest" width="169">
				<tr height="25"><td colspan="3"></td></tr>
				<tr height="40">
					<td align="center" width="169" height="40" bgcolor="#CC0000"
					style="-webkit-border-radius: 5px; -moz-border-radius: 5px; border-radius: 5px; color: #ffffff; display: inline-block; margin:0 auto; text-align:center;">
					    <a href="{{ server }}{{ config.button.uri }}"
					    style="font-size:12px; font-family:sans-serif; text-decoration: none; line-height:40px; width:100%; display:inline-block">
					    	<span style="color: #ffffff;">{{ config.button.text }}</span>
					    </a>
					  </td>
				</tr>
			</table>
		</td>
		<td width="209"></td>
	</tr>
	<tr height="120"><td colspan="3"></td></tr>
	<tr height="19" style="background-color:#f8f8f8;"><td colspan="3"></td></tr>
</table>
</body>
</html>
